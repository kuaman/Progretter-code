<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.17763.0</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="calculator.png" />
    <None Remove="memo.png" />
    <None Remove="option.png" />
    <None Remove="paintbrush.png" />
    <None Remove="Resources\deletetext.png" />
    <None Remove="Resources\schedule.png" />
