<Window x:Class="Progretter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progretter"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" MinWidth="1000" MinHeight="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabcontrol" Margin="10" TabStripPlacement="Left" SelectedIndex="1">
            <TabItem Width="120" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/option.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="60"/>
                        <TextBlock Text="메뉴" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="Tetris_btn" Content="테트리스" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Tetris_btn_Click" Grid.Row="3"/>
                    <GroupBox Header="시간표 설정" BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <CheckBox x:Name="chk_ScheduleCheckBox" Content="일정 옆 체크박스 표시" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Checked="chk_ScheduleCheckBox_Checked" Unchecked="chk_ScheduleCheckBox_Unchecked"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="그림판 설정" Grid.Row="1" BorderBrush="Black"/>
                    <GroupBox Header="일반 설정" Grid.Row="2" BorderBrush="Black"/>
                </Grid>
            </TabItem>
            <TabItem Width="120" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/schedule.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="시간표" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="346*"/>
                        <RowDefinition Height="139*"/>
                        <RowDefinition Height="49*"/>
                    </Grid.RowDefinitions>
                    <DataGrid Name="Schedule" ColumnWidth="*" FontSize="16" AlternationCount="2" AlternatingRowBackground="Gray" Grid.RowSpan="2">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                        </DataGrid.Resources>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="0,139,0,0" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Schedule_import" Content="불러오기" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Schedule_import_Click"/>
                        <Button Content="수정하기" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Width="120" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/memo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="메모장" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <Grid x:Name="TextTool" DockPanel.Dock="Top" Background="#FFF0F0F0" Height="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="472"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="text_family_combo" BorderBrush="{x:Null}" SelectionChanged="text_family_combo_SelectionChanged" Width="130" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
                        <TextBox x:Name="text_size" TextWrapping="Wrap" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" KeyDown="text_size_KeyDown" Width="80" Margin="153,0,0,0" HorizontalAlignment="Left" FontSize="14"/>
                        <ComboBox x:Name="text_size_combo" BorderBrush="{x:Null}" SelectionChanged="text_size_combo_SelectionChanged" Width="80" HorizontalAlignment="Left" Margin="239,0,0,0"/>
                        <ToggleButton x:Name="bold_Btn" Checked="bold_Btn_Checked" Unchecked="bold_Btn_Unchecked" Content="Bold" FontWeight="Bold" BorderBrush="{x:Null}" BorderThickness="1" Width="30" Margin="289,0,105,0" HorizontalAlignment="Right"/>
                        <ToggleButton x:Name="Italic_Btn" Checked="Italic_Btn_Checked" Unchecked="Italic_Btn_Unchecked" Content="l" FontStyle="Italic" BorderBrush="{x:Null}" BorderThickness="1" Width="30" Margin="324,0,70,0" HorizontalAlignment="Right"/>
                        <ToggleButton x:Name="underline_Btn" Checked="underline_Btn_Checked" Unchecked="underline_Btn_Unchecked" BorderBrush="{x:Null}" BorderThickness="1" FontSize="14" Width="30" Margin="359,0,35,0" HorizontalAlignment="Right">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="U" TextDecorations="Underline"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="strikethrough_Btn" Checked="strikethrough_Btn_Checked" Unchecked="strikethrough_Btn_Unchecked" BorderBrush="{x:Null}" BorderThickness="1" FontSize="14" Width="30" Margin="420,0,0,0" HorizontalAlignment="Right">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="S" TextDecorations="Strikethrough"/>
                            </StackPanel>
                        </ToggleButton>
                        <Button x:Name="text_delete_Btn" BorderBrush="{x:Null}" BorderThickness="1" Click="text_delete_Btn_Click" Width="30" Grid.Column="2">
                            <Image Source="/Resources/deletetext.png"/>
                        </Button>
                    </Grid>
                    <TextBox x:Name="Text" DockPanel.Dock="Bottom" Text="" UndoLimit="200" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True"/>
                </DockPanel>

            </TabItem>
            <TabItem x:Name="Calculator" Width="120" Height="102" KeyDown="Calculator_KeyDown">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/calculator.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="계산기" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="12*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="txtResult" TextWrapping="Wrap" Text="0" FontSize="48" AllowDrop="False" IsReadOnly="True" TextChanged="txtResult_TextChanged" TextAlignment="Right" Background="WhiteSmoke" BorderBrush="{x:Null}" Grid.Row="1"/>
                    <Grid Grid.Row="2" Background="#FFF3F3F3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_plusminus" BorderBrush="{x:Null}" Background="#FFFFF0D2">+/-</Button>
                        <Button Grid.Row="0" Grid.Column="1" Margin="5" FontSize="22" Click="Cal_CE" BorderBrush="{x:Null}" Background="#FFFFF0D2">CE</Button>
                        <Button x:Name="CalC" Grid.Row="0" Grid.Column="2" Margin="5" FontSize="22" Click="Cal_C" BorderBrush="{x:Null}" Background="#FFFFF0D2">C</Button>
                        <Button Grid.Row="0" Grid.Column="3" Margin="5" FontSize="20" Click="Cal_back" BorderBrush="{x:Null}" Background="#FFD1F7FF">Backspace</Button>
                        <Button x:Name="Cal7" Grid.Row="1" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">7</Button>
                        <Button x:Name="Cal8" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">8</Button>
                        <Button x:Name="Cal9" Grid.Row="1" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">9</Button>
                        <Button x:Name="CalPlus" Grid.Row="1" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">+</Button>
                        <Button x:Name="Cal4" Grid.Row="2" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">4</Button>
                        <Button x:Name="Cal5" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">5</Button>
                        <Button x:Name="Cal6" Grid.Row="2" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">6</Button>
                        <Button x:Name="CalSub" Grid.Row="2" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">-</Button>
                        <Button x:Name="Cal1" Grid.Row="3" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">1</Button>
                        <Button x:Name="Cal2" Grid.Row="3" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">2</Button>
                        <Button x:Name="Cal3" Grid.Row="3" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">3</Button>
                        <Button x:Name="CalMul" Grid.Row="3" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">×</Button>
                        <Button x:Name="CalPer" Grid.Row="4" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_dot" BorderBrush="{x:Null}">.</Button>
                        <Button x:Name="Cal0" Grid.Row="4" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">0</Button>
                        <Button x:Name="Cal_equal_btn" Grid.Row="4" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_equal" BorderBrush="{x:Null}">=</Button>
                        <Button x:Name="CalDiv" Grid.Row="4" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">÷</Button>
                    </Grid>
                    <Grid Grid.Column="1" Grid.RowSpan="3" Background="#FFF0F0F0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="기록" FontSize="18" Margin="116,0,115,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ListBox x:Name="Cal_log" Margin="10" Grid.Row="1" MouseDoubleClick="Cal_log_MouseDoubleClick"/>
                        <Button x:Name="Cal_log_remove" Content="기록 삭제" Grid.Row="2" HorizontalAlignment="Center" BorderBrush="{x:Null}" Click="Cal_log_remove_Click"/>
                    </Grid>
                    <Label x:Name="Label_log" Content="" FontSize="16"/>
                </Grid>
            </TabItem>
            <TabItem Width="120" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/paintbrush.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="그림판" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <DockPanel Background="#FFE5E5E5">
                    <StackPanel DockPanel.Dock="Top" Height="36" Orientation="Horizontal">
                        <Button x:Name="Canvas_load_btn" Click="Canvas_load_btn_Click">
                            <Image Source="/Resources/load.png"/>
                        </Button>
                        <Button x:Name="Canvas_save_btn" Margin="10,0,0,0" Click="Canvas_save_btn_Click">
                            <Image Source="/Resources/save.png"/>
                        </Button>
                        <Button x:Name="Canvas_brush_property" Margin="10,0,0,0" Click="Canvas_brush_property_Click">
                            <Image Source="/Resources/brush.png"/>
                        </Button>
                        <Button x:Name="Canvas_clear_btn" Margin="10,0,0,0" Click="Canvas_clear_btn_Click">
                            <Image Source="/Resources/deletetext.png"/>
                        </Button>
                        <Image x:Name="colorsImage" Source="/Resources/colors.png" Margin="10,0,0,0" MouseDown="Image_MouseDown"/>
                    </StackPanel>
                    <InkCanvas x:Name="inkCanvas"/>
                </DockPanel>
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="1">
            <StatusBarItem x:Name="Timenow"/>
            <Separator/>
            <StatusBarItem x:Name="S_Time" Content="1교시"/>
            <Separator/>
            <StatusBarItem x:Name="text"/>
        </StatusBar>
    </Grid>
</Window>
