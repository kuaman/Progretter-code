<Window x:Class="Progretter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progretter"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" MinWidth="1000" MinHeight="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabcontrol" Margin="10" TabStripPlacement="Left">
            <TabItem Width="120" Margin="0" Height="102">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Resources/option.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="60"/>
                        <TextBlock Text="메뉴" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="Tetris_btn" Content="테트리스" HorizontalAlignment="Left" Margin="10,489,0,0" VerticalAlignment="Top" Width="75" Click="Tetris_btn_Click"/>
                </Grid>
            </TabItem>
            <TabItem Width="120" Margin="0" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/schedule.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="시간표" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <DataGrid Margin="10"/>
                </Grid>
            </TabItem>
            <TabItem Margin="0,-1,1,1" Width="120" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/memo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="메모장" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <Border DockPanel.Dock="Top" Height="24" BorderBrush="Black" BorderThickness="1">
                        <Grid x:Name="TextTool" Background="#FFF0F0F0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="80*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="400*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="text_family_combo" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" SelectionChanged="text_family_combo_SelectionChanged"/>
                            <TextBox x:Name="text_size" Grid.Column="2" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" KeyDown="text_size_KeyDown"/>
                            <ComboBox x:Name="text_size_combo" Grid.Column="3" BorderBrush="{x:Null}" SelectionChanged="text_size_combo_SelectionChanged">
                            </ComboBox>
                            <ToggleButton x:Name="bold_Btn" Checked="bold_Btn_Checked" Unchecked="bold_Btn_Unchecked" Content="Bold" FontWeight="Bold" BorderBrush="{x:Null}" BorderThickness="1"  Grid.Column="5"/>
                            <ToggleButton x:Name="Italic_Btn" Checked="Italic_Btn_Checked" Unchecked="Italic_Btn_Unchecked" Content="l" Grid.Column="6" FontStyle="Italic" BorderBrush="{x:Null}" BorderThickness="1"/>
                            <ToggleButton x:Name="underline_Btn" Checked="underline_Btn_Checked" Unchecked="underline_Btn_Unchecked" Grid.Column="7" BorderBrush="{x:Null}" BorderThickness="1" FontSize="14">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="U" TextDecorations="Underline"/>
                                </StackPanel>
                            </ToggleButton>
                            <ToggleButton x:Name="strikethrough_Btn" Checked="strikethrough_Btn_Checked" Unchecked="strikethrough_Btn_Unchecked" Grid.Column="5" BorderBrush="{x:Null}" BorderThickness="1" FontSize="14">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="S" TextDecorations="Strikethrough"/>
                                </StackPanel>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    <TextBox x:Name="Text" DockPanel.Dock="Bottom" Text="안녕하세요" UndoLimit="200" TextWrapping="Wrap" />
                </DockPanel>

            </TabItem>
            <TabItem x:Name="Calculator" Width="120" Margin="0" Height="102" KeyDown="Calculator_KeyDown">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/calculator.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="계산기" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="12*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="txtResult" TextWrapping="Wrap" Text="0" FontSize="48" AllowDrop="False" IsReadOnly="True" TextChanged="txtResult_TextChanged" TextAlignment="Right" Background="WhiteSmoke" BorderBrush="{x:Null}" Grid.Row="1"/>
                    <Grid Grid.Row="2" Background="#FFF3F3F3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_plusminus" BorderBrush="{x:Null}" Background="#FFFFF0D2">+/-</Button>
                        <Button Grid.Row="0" Grid.Column="1" Margin="5" FontSize="22" Click="Cal_CE" BorderBrush="{x:Null}" Background="#FFFFF0D2">CE</Button>
                        <Button x:Name="CalC" Grid.Row="0" Grid.Column="2" Margin="5" FontSize="22" Click="Cal_C" BorderBrush="{x:Null}" Background="#FFFFF0D2">C</Button>
                        <Button Grid.Row="0" Grid.Column="3" Margin="5" FontSize="20" Click="Cal_back" BorderBrush="{x:Null}" Background="#FFD1F7FF">Backspace</Button>
                        <Button x:Name="Cal7" Grid.Row="1" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">7</Button>
                        <Button x:Name="Cal8" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">8</Button>
                        <Button x:Name="Cal9" Grid.Row="1" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">9</Button>
                        <Button x:Name="CalPlus" Grid.Row="1" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">+</Button>
                        <Button x:Name="Cal4" Grid.Row="2" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">4</Button>
                        <Button x:Name="Cal5" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">5</Button>
                        <Button x:Name="Cal6" Grid.Row="2" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">6</Button>
                        <Button x:Name="CalSub" Grid.Row="2" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">-</Button>
                        <Button x:Name="Cal1" Grid.Row="3" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">1</Button>
                        <Button x:Name="Cal2" Grid.Row="3" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">2</Button>
                        <Button x:Name="Cal3" Grid.Row="3" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">3</Button>
                        <Button x:Name="CalMul" Grid.Row="3" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">×</Button>
                        <Button x:Name="CalPer" Grid.Row="4" Grid.Column="0" Margin="5" FontSize="24" Click="Cal_dot" BorderBrush="{x:Null}">.</Button>
                        <Button x:Name="Cal0" Grid.Row="4" Grid.Column="1" Margin="5" FontSize="24" Click="Cal_num" BorderBrush="{x:Null}">0</Button>
                        <Button x:Name="Cal_equal_btn" Grid.Row="4" Grid.Column="2" Margin="5" FontSize="24" Click="Cal_equal" BorderBrush="{x:Null}">=</Button>
                        <Button x:Name="CalDiv" Grid.Row="4" Grid.Column="3" Margin="5" FontSize="36" Click="Cal_op" BorderBrush="{x:Null}" Background="#FFFFF0D2">÷</Button>
                    </Grid>
                    <Grid Grid.Column="1" Grid.RowSpan="3" Background="#FFF0F0F0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="기록" FontSize="18" Margin="116,0,115,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ListBox x:Name="Cal_log" Margin="10" Grid.Row="1"/>
                        <Button x:Name="Cal_log_remove" Content="기록 삭제" Grid.Row="2" HorizontalAlignment="Center" BorderBrush="{x:Null}" Click="Cal_log_remove_Click"/>
                    </Grid>
                    <Label x:Name="Label_log" Content=""/>
                </Grid>
            </TabItem>
            <TabItem Width="120" Margin="0" Height="102">
                <TabItem.Header>
                    <StackPanel>
                        <Image Source="/Resources/paintbrush.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
                        <TextBlock Text="그림판" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <Canvas HorizontalAlignment="Left" Height="367" Margin="10,10,0,0" VerticalAlignment="Top" Width="618"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="1">
            <StatusBarItem x:Name="Timenow"/>
            <Separator/>
            <StatusBarItem x:Name="S_Time" Content="1교시"/>
        </StatusBar>
    </Grid>
</Window>
